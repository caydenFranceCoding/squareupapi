{
  "name": "stripe-payment-backend",
  "version": "1.0.0",
  "description": "Production-ready Node.js backend for Stripe payments with comprehensive security and monitoring",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security-audit": "npm audit && npm audit fix",
    "docker:build": "docker build -t stripe-payment-backend .",
    "docker:run": "docker run -p 3001:3001 --env-file .env stripe-payment-backend",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "validate-env": "node -e \"const required=['STRIPE_SECRET_KEY','STRIPE_PUBLISHABLE_KEY','STRIPE_WEBHOOK_SECRET','ALLOWED_ORIGINS']; const missing=required.filter(v=>!process.env[v]); if(missing.length){console.error('Missing:',missing.join(','));process.exit(1)}else{console.log('âœ… All required env vars present')}\"",
    "prestart": "npm run validate-env"
  },
  "keywords": [
    "stripe",
    "payments",
    "nodejs",
    "express",
    "production",
    "security",
    "e-commerce",
    "checkout"
  ],
  "author": "VibeBeads Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "stripe": "^14.21.0",
    "cors": "^2.8.5",
    "helmet": "^7.2.0",
    "express-rate-limit": "^7.5.1",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.57.1",
    "@types/node": "^20.11.24"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/stripe-payment-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/stripe-payment-backend/issues"
  },
  "homepage": "https://github.com/your-username/stripe-payment-backend#readme",
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "node_modules/",
      "logs/"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
